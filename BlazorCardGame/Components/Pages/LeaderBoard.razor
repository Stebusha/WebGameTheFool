@page "/scores"

@rendermode InteractiveServer

<PageTitle> Таблицы рекордов</PageTitle>

<h3>@selectedBoard</h3>

<select @onchange="OnGameSelected">
    <option value="">Список игр</option>

    @foreach (var game in gameRecord)
    {
        <option value="@game">@game</option>
    }
</select>

